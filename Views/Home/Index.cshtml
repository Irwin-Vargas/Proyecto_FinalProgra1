@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization

@{
    ViewData["Title"] = "La Perucha";
}

<div class="hero-section text-center text-white bg-dark py-5" style="background: url('/images/banner.jpg') center/cover no-repeat;">
    <div class="container">
        <h1 class="display-4 fw-bold">¡Bienvenido a La Perucha</h1>
        <p class="lead">Disfruta de las mejores hamburguesas</p>
        <a href="/MenuItem" class="btn btn-warning btn-lg mt-3">Ver Menú</a>
    </div>
</div>

<section class="features py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-6 mb-6">
                <img src="/images/delivery-icon.jpeg" alt="Envío rápido" style="height: 300px;">
                <h4 class="mt-3">Envío Rápido</h4>
                <p>Tu comida caliente y deliciosa en menos de 30 minutos.</p>
            </div>
            <div class="col-md-6 mb-6">
                <img src="/images/food-icon.jpeg" alt="Comida fresca" style="height: 300px;">
                <h4 class="mt-3">Ingredientes Frescos</h4>
                <p>Usamos solo productos frescos y de calidad superior.</p>
            </div>
        </div>
    </div>
</section>


@if (!User.Identity.IsAuthenticated)
{
    <section class="promo text-center py-5 text-white" style="background-color: #ff5722;">
        <div class="container">
            <h2 class="display-5">¿Primera vez aquí?</h2>
            <p class="lead">Regístrate y haz tu primer pedido ahora mismo</p>
            <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg">Registrate</a>
        </div>
    </section>
}