@model IEnumerable<Proyecto_FinalProgra1.Models.CartDetail>
@{
    ViewData["Title"] = "Carrito de Compras";
    double total = 0;
}

<h2 class="text-primary">Carrito de Compras</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Tu carrito está vacío.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio Unitario</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th>Imagen</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                double itemTotal = item.Quantity * item.UnitPrice;
                total += itemTotal;

                <tr>
                    <td>@item.MenuItem?.ItemName</td>
                    <td>$@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>$@itemTotal</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.MenuItem?.Image))
                        {
                            <img src="@item.MenuItem.Image" width="70" height="70" />
                        }
                    </td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Proceder al Pago</a>
        <h4>Total del Pedido: <strong class="text-success">$@total</strong></h4>
    </div>
}
