    Layout = null;
}

<h2 class="text-primary">ðŸ“Š Resumen General</h2>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Pedidos</h5>
