@model IEnumerable<Proyecto_FinalProgra1.Models.Stock>
@{
    ViewData["Title"] = "Stock de Productos";
}

<h2 class="text-primary mb-4">Inventario de Stock</h2>

<a asp-action="Create" class="btn btn-success mb-3">âž• Agregar Stock</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MenuItem?.ItemName</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
