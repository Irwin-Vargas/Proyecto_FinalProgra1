@model Proyecto_FinalProgra1.Models.Stock
@{
    ViewData["Title"] = "Editar Stock";
}

<h2 class="text-warning mb-3">✏️ Editar Stock</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
    <label class="form-label">Producto</label>
    <input type="text" value="@Model.MenuItem?.ItemName" class="form-control" disabled />
    <input type="hidden" asp-for="MenuItemId" />
</div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Cantidad</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
