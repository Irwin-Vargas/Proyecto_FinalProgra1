@model Proyecto_FinalProgra1.Models.Stock
@{
    ViewData["Title"] = "Agregar Stock";
}

<h2 class="text-primary mb-3">âž• Agregar Stock</h2>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="MenuItemId" class="form-label">Producto</label>
        <select asp-for="MenuItemId" asp-items="ViewBag.MenuItems" class="form-select"></select>
        <span asp-validation-for="MenuItemId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Cantidad</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
