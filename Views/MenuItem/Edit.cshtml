@model Proyecto_FinalProgra1.Models.MenuItem
@{
    ViewData["Title"] = "Editar Producto";
}

<h2 class="text-primary">Editar Producto</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="ItemName" class="form-label"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Categoría</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
            <option value="">-- Selecciona una categoría --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Imagen actual:</label><br />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" width="100" height="100" />
        }
    </div>
    <div class="mb-3">
        <label class="form-label">Reemplazar imagen:</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
