@model IEnumerable<Proyecto_FinalProgra1.Models.MenuItem>
@{
    ViewData["Title"] = "Menú";
}

<h2 class="text-primary">Menú de Comida</h2>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary mb-3">Agregar Producto</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Categoría</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Acciones</th>
            }
            else if (User.Identity.IsAuthenticated)
            {
                <th>Comprar</th>
            }
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <img src="@item.Image" alt="@item.ItemName" width="80" height="80" />
                }
            </td>
            <td>@item.ItemName</td>
            <td>@item.Description</td>
            <td>S/. @item.Price.ToString("0.00")</td>
            <td>@item.Category?.CategoryName</td>

            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            }
            else if (User.Identity.IsAuthenticated)
            {
                <td>
                    <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Agregar al carrito</button>
                    </form>
                </td>
            }
        </tr>
    }
    </tbody>
</table>
